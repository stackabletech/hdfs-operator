---
apiVersion: kuttl.dev/v1beta1
kind: TestStep
metadata:
  name: stop-hdfs
timeout: 180
---
apiVersion: hdfs.stackable.tech/v1alpha1
kind: HdfsCluster
metadata:
  name: hdfs
spec:
  image:
    productVersion: "{{ test_scenario['values']['hadoop-latest'].split('-stackable')[0] }}"
    stackableVersion: "{{ test_scenario['values']['hadoop-latest'].split('-stackable')[1] }}"
  clusterConfig:
    dfsReplication: 1
    zookeeperConfigMapName: hdfs-zk
  clusterOperation:
    stopped: true
    reconciliationPaused: false
{% if lookup('env', 'VECTOR_AGGREGATOR') %}
    vectorAggregatorConfigMapName: vector-aggregator-discovery
{% endif %}
  nameNodes:
    config:
      logging:
        enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
    roleGroups:
      default:
        replicas: 2  # set to 0 by operator because because cluster stopped
  dataNodes:
    config:
      logging:
        enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
    roleGroups:
      default:
        replicas: 4 # set to 0 by operator because because cluster stopped
  journalNodes:
    config:
      logging:
        enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
    roleGroups:
      default:
        replicas: 1  # set to 0 by operator because because cluster stopped
