---
role: Aggregator
service:
  ports:
  - name: api
    port: 8686
    protocol: TCP
    targetPort: 8686
  - name: vector
    port: 6123
    protocol: TCP
    targetPort: 6000
customConfig:
  api:
    address: 0.0.0.0:8686
    enabled: true
  sources:
    vector:
      address: 0.0.0.0:6000
      type: vector
      version: "2"
  transforms:
    automaticLogConfigNameNode:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-automatic-log-config-0" &&
        .container == "hdfs"
    automaticLogConfigNameNodeZkfc:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-automatic-log-config-0" &&
        .container == "zkfc"
    automaticLogConfigNameNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-automatic-log-config-0" &&
        .container == "vector"
    customLogConfigNameNode:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-custom-log-config-0" &&
        .container == "hdfs"
    customLogConfigNameNodeZkfc:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-custom-log-config-0" &&
        .container == "zkfc"
    customLogConfigNameNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-custom-log-config-0" &&
        .container == "vector"
    automaticLogConfigDataNode:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-datanode-automatic-log-config-0" &&
        .container == "hdfs"
    automaticLogConfigDataNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-datanode-automatic-log-config-0" &&
        .container == "vector"
    customLogConfigDataNode:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-datanode-custom-log-config-0" &&
        .container == "hdfs"
    customLogConfigDataNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-datanode-custom-log-config-0" &&
        .container == "vector"
    automaticLogConfigJournalNode:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-journalnode-automatic-log-config-0" &&
        .container == "hdfs"
    automaticLogConfigJournalNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-journalnode-automatic-log-config-0" &&
        .container == "vector"
    customLogConfigJournalNode:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-journalnode-custom-log-config-0" &&
        .container == "hdfs"
    customLogConfigJournalNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-journalnode-custom-log-config-0" &&
        .container == "vector"
  sinks:
    out:
      inputs: [automaticLogConfig*, customLogConfig*]
{% if lookup('env', 'VECTOR_AGGREGATOR') %}
      type: vector
      address: {{ lookup('env', 'VECTOR_AGGREGATOR') }}
{% else %}
      type: blackhole
{% endif %}
