---
role: Aggregator
service:
  ports:
  - name: api
    port: 8686
    protocol: TCP
    targetPort: 8686
  - name: vector
    port: 6123
    protocol: TCP
    targetPort: 6000
customConfig:
  api:
    address: 0.0.0.0:8686
    enabled: true
  sources:
    vector:
      address: 0.0.0.0:6000
      type: vector
      version: "2"
  transforms:
    automaticLogConfigNameNodeHdfs:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-automatic-log-config-0" &&
        .container == "namenode"
    automaticLogConfigNameNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-automatic-log-config-0" &&
        .container == "vector"
    customLogConfigNameNodeHdfs:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-custom-log-config-0" &&
        .container == "namenode"
    customLogConfigNameNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-namenode-custom-log-config-0" &&
        .container == "vector"
    automaticLogConfigDataNodeHdfs:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-datanode-automatic-log-config-0" &&
        .container == "datanode"
    automaticLogConfigDataNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-datanode-automatic-log-config-0" &&
        .container == "vector"
    customLogConfigDataNodeHdfs:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-datanode-custom-log-config-0" &&
        .container == "datanode"
    customLogConfigDataNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-datanode-custom-log-config-0" &&
        .container == "vector"
    automaticLogConfigJournalNodeHdfs:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-journalnode-automatic-log-config-0" &&
        .container == "journalnode"
    automaticLogConfigJournalNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-journalnode-automatic-log-config-0" &&
        .container == "vector"
    customLogConfigJournalNodeHdfs:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-journalnode-custom-log-config-0" &&
        .container == "journalnode"
    customLogConfigJournalNodeVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "test-hdfs-journalnode-custom-log-config-0" &&
        .container == "vector"
  sinks:
    out:
      inputs: [automaticLogConfig*, customLogConfig*]
{% if lookup('env', 'VECTOR_AGGREGATOR') %}
      type: vector
      address: {{ lookup('env', 'VECTOR_AGGREGATOR') }}
{% else %}
      type: blackhole
{% endif %}
